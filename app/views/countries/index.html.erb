<script>
  var ctx = document.getElementById('myChart2').getContext('2d');
  var myChart2 = new Chart(ctx, {
      type: 'radar',
      data: {
          labels: <%= raw @total_recovery.map(&:name).to_json  %>,
          datasets: [{
              label: '# of Recoveries',
              data: <%= @total_recovery.map(&:recovery_count).to_json %>  ,
